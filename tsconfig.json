{
    "compilerOptions": {
        "module": "es6",
        "target": "es2015",
        "jsx": "react",
        "lib": [
            "es2016",
            "dom"
        ],
        "strictNullChecks": false,
        "removeComments": true,
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "./src",
        "paths":{
            "@components/*": ["components/*"],
            "@scss/*": ["assets/scss/*"],
            "@api/*": ["api/*"],
            "@utils/*": ["utils/*"],
            "@constants/*": ["constants/*"],
            "@actions/*": ["redux/actions/*"],
            "@reducers/*": ["redux/reducers/*"]
        }
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "build",
        "config"
    ],
    "include": [
        "src"
    ]
}